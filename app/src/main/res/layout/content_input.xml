<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InputActivity"
    tools:showIn="@layout/activity_input"
    android:orientation="vertical"
    >



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/appbar"
        android:gravity="center"
        app:elevation="0dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_image"
        android:src="@drawable/agriculture"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/titleTxt2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="افزودن فعالیت"
        android:textColor="#fff"
        android:fontFamily="@font/persian"
        android:layout_marginStart="1dp"
        android:textStyle="bold"
        android:gravity="center"
        />

        </LinearLayout>




    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="0dp"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="#fff"
        app:tabTextColor="#fff"
        android:id="@+id/tablayout"
        app:tabMode="fixed"

        >




    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/veiwPager"
        android:background="@drawable/insight_back"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:elevation="4dp"
        >

    </androidx.viewpager.widget.ViewPager>



</LinearLayout>